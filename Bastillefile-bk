# Base packages
PKG python311 py311-pip git

# Copy installer script into the jail
CP root /

# Make sure it’s executable
CMD chmod +x /root/install_rns_nomadnet_meshchat.sh

# Run the installer (it’s safe to re-run)
CMD /root/install_rns_nomadnet_meshchat.sh

# Expose SSH from the jail on the LAN host via bridge0:1022 -> jail:22
#RDR bridge0 tcp 1022 22


# SSH: host:1022 → jail:22
RDR tcp 1022 22

# MeshChat: host:8000 → jail:8000
RDR tcp 8000 8000
